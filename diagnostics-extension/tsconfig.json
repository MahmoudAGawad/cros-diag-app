{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ES2015",
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./src/__tests__/**/*"
  ]
}